
<h1><%= pluralize(@open_mats.size, 'Open Mat') %></h1>

<% @open_mats.each do |open_mat| %>
  <article>
    <header>
      <h2><%= open_mat.location %></h2>
    </header>
    <table>
      <tr>
        <th>Host:</th>
        <td><%= open_mat.host %></td>
      </tr>
      <tr>
        <th>Number of People Attending:</th>
        <td><%= open_mat.number_people_attending %></td>
      </tr>
    </table>
  </article>
<% end %>
